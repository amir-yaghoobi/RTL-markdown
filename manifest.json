{
  "name": "RTL markdown parser",
  "version": "1.0",
  "description": "a simple rtl markdown parser for github",
  "permissions": ["activeTab", "declarativeContent", "tabs", "https://github.com/*"],
  "options_page": "options.html",
  "page_action": {
    "default_icon": "images/get_started16.png",
    "default_popup": "popup.html",
    "default_title": "RTL markdown"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["jquery.js", "marked.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
